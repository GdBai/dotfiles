#!/usr/bin/env bash

if [[ ! -f /etc/motd ]]; then
  if [[ $EUID -eq 0 ]]; then
    touch /etc/motd
    tee -a /etc/motd > /dev/null << EOF
 ██████╗        ██████╗  █████╗ ██╗
██╔════╝        ██╔══██╗██╔══██╗██║
██║  ███╗       ██████╔╝███████║██║
██║   ██║       ██╔══██╗██╔══██║██║
╚██████╔╝██╗    ██████╔╝██║  ██║██║
 ╚═════╝ ╚═╝    ╚═════╝ ╚═╝  ╚═╝╚═╝
EOF
  else
    sudo touch /etc/motd
    sudo tee -a /etc/motd > /dev/null << EOF
 ██████╗        ██████╗  █████╗ ██╗
██╔════╝        ██╔══██╗██╔══██╗██║
██║  ███╗       ██████╔╝███████║██║
██║   ██║       ██╔══██╗██╔══██║██║
╚██████╔╝██╗    ██████╔╝██║  ██║██║
 ╚═════╝ ╚═╝    ╚═════╝ ╚═╝  ╚═╝╚═╝
EOF
  fi
fi
